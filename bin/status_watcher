#!/usr/bin/env perl

#########
# Author:        Marina Gourtovaia
# Created:       16 July 2014
#

use strict;
use warnings;
use FindBin qw($Bin);
use lib ( -d "$Bin/../lib/perl5" ? "$Bin/../lib/perl5" : "$Bin/../lib" );
use File::Temp qw/ tempdir /;
use npg_tracking::monitor::status;

our $VERSION = '0';

my $dir = tempdir(UNLINK => 1);
warn "Directory $dir\n";

my $target = join q[/], $dir, 'target';
my $target1 = join q[/], $dir, 'target1';
mkdir $target1;
mkdir "$target1/status";
`ln -sv $target1 $target`;
$dir = "$target/status";

my $monitor = npg_tracking::monitor::status->new(dir => $dir, link => $target);
$SIG{'INT'} = 'interrupt_handler';
$monitor->watch(); #this method never returns

exit 0;

sub interrupt_handler {
  warn "Handling interrupt sygnal\n";
  $monitor->DEMOLISH;
  exit 0;
}

1;
__END__

