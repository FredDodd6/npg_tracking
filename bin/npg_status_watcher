#!/usr/bin/env perl

#########
# Author:        Marina Gourtovaia
# Created:       16 July 2014
#

use strict;
use warnings;
use FindBin qw($Bin);
use lib ( -d "$Bin/../lib/perl5" ? "$Bin/../lib/perl5" : "$Bin/../lib" );
use Carp;
use Try::Tiny;
use Readonly;

use npg_tracking::monitor::status;

our $VERSION = '0';

Readonly::Scalar my $TOP_LEVEL => q[/export];

if (!-d $TOP_LEVEL) {
  croak "$TOP_LEVEL directory does not exist, exiting"; 
}

my $pattern = "${TOP_LEVEL}/sf*";
my @dirs = glob $pattern;
if (!@dirs) {
  croak "Cannot find $pattern";
}

if (scalar @dirs > 1) {
  croak "Too many directories with pattern $pattern";
}

my $dir = $dirs[0];
my $transit     = "$dir/analysis";
my $destination = "$dir/outgoing";
warn "Discovered $dir, starting monitoring $transit and $destination\n";

my $monitor = npg_tracking::monitor::status->new(
                transit     => $transit,
                destination => $destination
                                                );
$SIG{'INT'} = 'interrupt_handler';
try {
  $monitor->watch(); # This method never returns.
} catch {
  carp "Error in status watch : $_\n\n Cancelling watch...";
  $monitor->_all_watch_cancel;
  exit 1;
};

exit 0;

sub interrupt_handler {
  warn "Handling interrupt sygnal\n";
  try { $monitor->_all_watch_cancel };
  exit 0;
}

1;
__END__

